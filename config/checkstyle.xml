<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<!--
  Configuración Checkstyle para gestion-documental-backend (PAS-EST-043).
  Perfil básico: Javadoc en clases públicas, estilo de nombrado, longitud de línea.
-->
<module name="Checker">
  <property name="charset" value="UTF-8"/>
  <property name="severity" value="warning"/>
  <property name="fileExtensions" value="java"/>

  <!-- Longitud de línea máxima 120 (hijo de Checker) -->
  <module name="LineLength">
    <property name="max" value="120"/>
    <property name="severity" value="warning"/>
  </module>

  <module name="TreeWalker">
    <!-- Javadoc en clases públicas -->
    <module name="JavadocType">
      <property name="severity" value="warning"/>
    </module>
    <!-- Nombrado: tipos en PascalCase -->
    <module name="TypeName">
      <property name="severity" value="warning"/>
    </module>
    <!-- Nombrado: métodos en camelCase -->
    <module name="MethodName">
      <property name="severity" value="warning"/>
    </module>
    <module name="ConstantName">
      <property name="severity" value="warning"/>
    </module>
  </module>
</module>

{
  "endpoint": "POST /api/v1/consultas",
  "description": "Consulta inventarios por estado",
  "method": "POST",
  "url": "http://localhost:8080/api/v1/consultas",
  "headers": {
    "Content-Type": "application/json",
    "Accept": "application/json"
  },
  "body": {
    "estado": "Registrado"
  },
  "validEstados": [
    "Registrado",
    "Pendiente",
    "Actualizado",
    "Aprobado"
  ],
  "examples": [
    {
      "description": "Inventarios registrados",
      "body": {
        "estado": "Registrado"
      }
    },
    {
      "description": "Inventarios aprobados",
      "body": {
        "estado": "Aprobado"
      }
    },
    {
      "description": "Inventarios pendientes",
      "body": {
        "estado": "Pendiente"
      }
    },
    {
      "description": "Inventarios actualizados",
      "body": {
        "estado": "Actualizado"
      }
    }
  ],
  "curlExample": "curl -X POST 'http://localhost:8080/api/v1/consultas' -H 'Content-Type: application/json' -H 'Accept: application/json' -d '{\"estado\":\"Registrado\"}'"
}

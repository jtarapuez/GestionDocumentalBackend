{
  "endpoint": "POST /api/v1/consultas",
  "description": "Consulta inventarios por rango de fechas",
  "method": "POST",
  "url": "http://localhost:8080/api/v1/consultas",
  "headers": {
    "Content-Type": "application/json",
    "Accept": "application/json"
  },
  "body": {
    "fechaDesde": "2020-01-01",
    "fechaHasta": "2020-12-31"
  },
  "examples": [
    {
      "description": "Rango de fechas completo",
      "body": {
        "fechaDesde": "2020-01-01",
        "fechaHasta": "2020-12-31"
      }
    },
    {
      "description": "Desde una fecha específica",
      "body": {
        "fechaDesde": "2020-01-01"
      }
    },
    {
      "description": "Hasta una fecha específica",
      "body": {
        "fechaHasta": "2020-12-31"
      }
    },
    {
      "description": "Rango de fechas con estado específico",
      "body": {
        "fechaDesde": "2020-01-01",
        "fechaHasta": "2020-12-31",
        "estado": "Aprobado"
      }
    }
  ],
  "note": "⚠️ Este filtro puede estar marcado como TODO en el código. Formato de fecha: YYYY-MM-DD",
  "curlExample": "curl -X POST 'http://localhost:8080/api/v1/consultas' -H 'Content-Type: application/json' -H 'Accept: application/json' -d '{\"fechaDesde\":\"2020-01-01\",\"fechaHasta\":\"2020-12-31\"}'"
}

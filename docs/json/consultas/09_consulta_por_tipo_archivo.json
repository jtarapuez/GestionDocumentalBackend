{
  "endpoint": "POST /api/v1/consultas",
  "description": "Consulta inventarios por tipo de archivo (activo o pasivo)",
  "method": "POST",
  "url": "http://localhost:8080/api/v1/consultas",
  "headers": {
    "Content-Type": "application/json",
    "Accept": "application/json"
  },
  "body": {
    "tipoArchivo": "Archivo activo"
  },
  "validTiposArchivo": [
    "Archivo activo",
    "Archivo pasivo"
  ],
  "examples": [
    {
      "description": "Inventarios de archivo activo",
      "body": {
        "tipoArchivo": "Archivo activo"
      }
    },
    {
      "description": "Inventarios de archivo pasivo",
      "body": {
        "tipoArchivo": "Archivo pasivo"
      }
    },
    {
      "description": "Archivo activo con estado específico",
      "body": {
        "tipoArchivo": "Archivo activo",
        "estado": "Aprobado"
      }
    }
  ],
  "note": "⚠️ Este filtro puede estar marcado como TODO en el código",
  "curlExample": "curl -X POST 'http://localhost:8080/api/v1/consultas' -H 'Content-Type: application/json' -H 'Accept: application/json' -d '{\"tipoArchivo\":\"Archivo activo\"}'"
}
